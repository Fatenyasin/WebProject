@model List<Repository>
@{
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Car Company</title>

    <style>

        a {
            text-decoration: none;
        }

        h1 {
            text-align:center;
            justify-content:center;
            font-size: 60px;
            font-family: 'Gill Sans', 'Gill Sans MT', Calibri, 'Trebuchet MS', sans-serif;
            color: white;
        }

        h2 {
            color: rgb(48, 48, 48);
            font-size: 32px;
            font-weight: 400;
            text-transform: capitalize;
        }

        .w-100 {
            width: 100%;
        }

        body {
            font-family: 'Fira Sans', sans-serif;
            color: rgb(104, 104, 104);
        }

        a {
            text-decoration: none;
        }

        h1 {
            font-size: 60px;
            color: white;
        }

        h2 {
            color: rgb(48, 48, 48);
            font-family: 'Franklin Gothic Medium', 'Arial Narrow', Arial, sans-serif;
            font-size: 32px;
            font-weight: 400;
            text-transform: capitalize;
        }


        .header .he {
            background-size: cover;
            background-attachment: fixed;
            position: relative;
        }

        .overlay {
            background-color: #54585c;
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            opacity: .6;
        }

        .header-content {
            position: absolute;
            top: 40%;
            left: 27%;
            text-align: center;
            color: white;
        }

            .header-content h1 {
                text-transform: capitalize;
            }

            .header-content p {
                margin: 10px 0;
                margin: auto;
            }

            .header-content .btn .learn {
                background-color: white;
                padding: 12px 14px;
                border-radius: 5px;
                color: black;
                text-transform: capitalize;
                display: inline-block;
                margin-right: 10px;
            }

                .header-content .btn .learn:hover {
                    background-color: rgba(255, 255, 255, 0.808);
                }

        .Login {
            padding: 10px 10px;
            border-radius: 5px;
            border: 2px solid white;
            color: white;
            text-transform: capitalize;
            display: inline-block;
            margin-right: 10px;
        }

        .Login {
            background-color: white;
            color: black;
        }

        img {


            height:400px;
            width: 100%;
        }
    </style>
</head>
<body>
    <div class="header">
        <div class="he">
            <div class="img-">
                <img src="https://longlewisauto.com/wp-content/uploads/2016/11/LineupMitsubishi.png" alt="Car image" />
            </div>
            <div class="overlay"></div>
        </div>
        <div class="header-content">
            <h1 style="align-content:center">Car Company Managment System</h1>
            <p>A website to help you managing your car company easily</p>
            <br />
            <div class="btn">
                <a href="#bottom-section" class="learn">About Us</a>
                <a asp-controller="Car" asp-action="Login" class="Login">Login</a>
            </div>
        </div>
    </div>
    <br />
    <br />
    <br />
    <br />
    <br />
    <br />
    <br />
    <br />



    <div id="bottom-section">
        <h2>About Us</h2>
        <p>
            Welcome to Car Company Managment System, the leading platform dedicated to simplifying the car trading and management process for businesses and customers alike. Our mission is to provide
            car companies with a seamless, efficient, and user-friendly solution to manage their inventory, facilitate transactions, and enhance customer interactions. With our innovative system, businesses
            can easily add, update, and manage car listings, while customers can browse, compare, and connect with dealers all in one place.
        </p>
    </div>

</body>
</html>
